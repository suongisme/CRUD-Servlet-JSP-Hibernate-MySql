<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
	"http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/HibernateCRUD</property>
		<property name="hibernate.connection.user">admin</property>
		<property name="hibernate.connection.password">Admin@admin123</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hiberanate.pool_size">1</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		
		<mapping class="suongnguyen.learn.model.Product"/>
		<mapping class="suongnguyen.learn.model.User"/>
	</session-factory>
</hibernate-configuration>


